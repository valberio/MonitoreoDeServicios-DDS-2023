{{#partial "contenido" }}

<div class="container">
    <div class="row">
        <div class="col-md-6 d-flex align-items-center justify-content-center">
            <iframe width="600" height="450" style="border:0" Loading="lazy" allowfullscreen src="https://www.google.com/maps/embed/v1/view?zoom=17&center=-34.5986%2C-58.4201&key=AIzaSyDBJD6fpJEj8pV7pB9QHKd7f8LnjbWexy0"></iframe>

        </div>
        <div class="col-md-5">
            <div class="row">
                <div class="container borde redondeado mt-5">
                    <div class="col p-4">
                        <div class="row borde redondeado p-2">
                            <h4 class="text-center">¿Te podes acercar a la ubicación del incidente?</h4>
                        </div>
                        {{#each incidentes}}
                            <div class="row borde redondeado m-2">
                                <div class="col-md-4">
                                    <div class="p-4 mt-2 mb-2 borde d-flex align-items-center justify-content-center redondeado">
                                        <h4>{{this.servicioAfectado.establecimiento.nombre}}</h4>
                                    </div>

                                </div>
                                <div class="col-4">
                                    <div class="p-4 mt-2 mb-2 borde d-flex align-items-center justify-content-center redondeado">
                                        <h4>{{this.servicioAfectado.nombre}}</h4>
                                    </div>

                                </div>
                                <div class="col-2">
                                    <div class="p-4 mt-2 mb-2 borde d-flex align-items-center justify-content-center redondeado">
                                        <h5>{{this.descripcion}}</h5>
                                    </div>
                                </div>
                                <div class="col-2">
                                    <div class="p-4 mt-2 mb-2 borde d-flex align-items-center justify-content-center redondeado">
                                        <a href="incidentes/{{this.id}}/editar">Me puedo acercar a este</a>
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                        <div class="p-4 mt-2 mb-2 borde d-flex align-items-center justify-content-center redondeado">
                            <a href="/home">No puedo acercarme</a>
                        </div>

                </div>

            </div>

        </div>
    </div>
</div>
{{/partial}}
{{> templates/baseConNavegador }}

